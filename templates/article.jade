
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.author
    p.author(style="max-width:350px;margin:0 auto 1em;text-transform:none;")
      span thought experiments and ui/ux wireframing for personal reflection and feedback from the 7Geese flock
    p.author(style="margin-bottom:0.45em;")
      span.coffee-cup
      mixin author(page.metadata.author)

block content
  article.article
    section.content!= typogr(page.html).typogrify()

block prepend footer
  div.nav
    a(href=contents.index.url) Â« Full blog
  h3 Got something to say?
  include disqus
